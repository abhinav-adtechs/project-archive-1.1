<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.archive.jordiie.onboardingscreen">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
        <activity android:name=".onBoarding.onboardingMain" />
        <activity
            android:name=".Splash.SplashScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Signup" />
        <activity
            android:name=".NavDrawer.Drawer"
            android:label="@string/title_activity_drawer"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.archive.jordiie.onboardingscreen2.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme">

        </activity>

        <activity android:name=".WelcomeScreen"
            android:label="Welcome Screen">
        </activity>
    </application>

</manifest>
